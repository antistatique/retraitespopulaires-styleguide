{% set theme = 'prevoyance' %}
{% if variables.results %}
  <div>
      <table class="table-wide table-{{ theme }} tablesaw tablesaw-stack">
        <thead>
          <tr>
            <th colspan="2">{% trans %}Nos prestations estimées à {{ variables.results.age }} ans{% endtrans %}</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            {% set deadline = variables.results.deadline|date_format('d.m.Y') %}
            <td>{% trans %}Capital de retraite au {{ deadline }}{% endtrans %}</td>
            <td>
              <div class="form-group readonly">
                <input type="text" readonly="" name="capital" class="form-control js-amount-with-fee-input form-chf-numeric text-right" value="{{ variables.results.capital }}">
              </div>
            </td>
          </tr>

          {% set pension = variables.results.deadline|date_modify('+1 day')|date_format('d.m.Y') %}
          {% if variables.results.civil_status == 'Non' %}
            <tr>
              <td>{% trans %}Rente annuelle de retraite dès le {{ pension }}{% endtrans %}</td>
              <td>
                <div class="form-group readonly">
                  <input type="text" readonly="" name="annual_pension_single" class="form-control js-amount-with-fee-input form-chf-numeric text-right" value="{{ variables.results.annual_pension_single }}">
                </div>
              </td>
            </tr>
          {% else %}
            <tr>
              <td>
                <p>{% trans %}Rente annuelle de retraite de couple dès {{ pension }}{% endtrans %}</p>
                <p class="m-b-0">{% trans %}Taux de réversibilité de {{ variables.results.percent }}%{% endtrans %}</p>
              </td>
              <td>
                <div class="form-group readonly">
                  <input type="text" readonly="" name="annual_pension_single" class="form-control js-amount-with-fee-input form-chf-numeric text-right" value="{{ variables.results.annual_pension_couple }}">
                </div>
              </td>
            </tr>

            <tr>
              <td>{% trans %}Rente annuelle de conjoint/partenaire survivant{% endtrans %}</td>
              <td>
                <div class="form-group readonly">
                  <input type="text" readonly="" name="annual_pension_single" class="form-control js-amount-with-fee-input form-chf-numeric text-right" value="{{ variables.results.pension_survivor }}">
                </div>
              </td>
            </tr>
          {% endif %}
        </tbody>
      </table>

      <div class="spacer spacer-md"></div>
      <a href="{{ path('entity.node.canonical', {'node': variables.node.nid.value, 'reset': true}) }}" class="btn btn-{{ theme }}">{% trans %}Retourner au calculateur{% endtrans %}</a>

      <div class="spacer spacer-md"></div>
      <div class="alert alert-info">
        {% trans %}Les prestations mentionnées ci-dessus sont indicatives et ne sauraient engager contractuellement Retraites Populaires.{% endtrans %}
      </div>

      <div class="spacer spacer-md"></div>

      <p>{% trans %}Notre offre vous intéresse ? N'hésitez pas à compléter le formulaire ci-dessous. Un conseiller de Retraites Populaires prendra contact avec vous.{% endtrans %}</p>
      <div class="spacer spacer-md"></div>

      <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
        {{ load_form('rp_libre_passage', 'PLPContactForm', {'theme': theme, 'results': variables.results}) }}
        </div>
      </div>
  </div>

{% else %}

  <div class="col-xs-8 col-xs-offset-2">
    {{ load_form('rp_libre_passage', 'PLPCalculatorForm', {'theme': theme}) }}
  </div>

{% endif %}
