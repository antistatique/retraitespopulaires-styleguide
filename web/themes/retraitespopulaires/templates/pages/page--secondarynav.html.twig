{% extends "@retraitespopulaires/pages/page.html.twig" %}

{# Main Content #}
{% block main_content %}
  <div role="main" class="main-container container-fluid">
    <div class="row">
      <div class="col-xs-12 col-md-7 col-md-push-4 col-lg-8 col-lg-push-3 col-xl-6 col-xl-push-3">
        <div class="entity-content">
          <section{{ content_attributes.addClass(content_classes) }}>
            {# Content #}
            {% block content %}
              <a id="main-content"></a>
              {{ page.content }}
            {% endblock %}
          </section>
        </div>
        {% block main_bottom_content %}{% endblock %}
      </div>
      <div class="col-xs-12 col-md-4 col-md-pull-7 col-lg-3 col-lg-pull-8 col-xl-2 col-xl-pull-6">
        {{ load_block('rp_layout_secondarynav_block') }}

        {# Sidebar First #}
        {% if page.sidebar_first %}
          {% block sidebar_first %}
            <aside class="col-sm-3" role="complementary">
              {{ page.sidebar_first }}
            </aside>
          {% endblock %}
        {% endif %}
      </div>
    </div>
  </div>
{% endblock %}
