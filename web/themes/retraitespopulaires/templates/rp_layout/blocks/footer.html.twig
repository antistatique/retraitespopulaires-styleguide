<div class="footer hidden-print">
  <div class="container">
    <div class="row">
      <!-- Socialnetwork -->
      <div class="col-xs-12 col-md-6">
        <h4>{% trans %}Réseaux sociaux{% endtrans %}</h4>
        <p>{% trans %}Suivez-nous en temps réel sur Twitter. Facebook et vos plateformes préférées!{% endtrans %}</p>
        <div class="spacer spacer-xs"></div>

        <div class="social-list">
          <div class="button-bubble button-bubble-social inline-block button-bubble-outline text-center">
            <div class="spacer spacer-xs"></div>
            <div class="bubble-icon">
              <a aria-label="Cliquez pour accéder au compte Twitter de Retraites Populaires" href="{{ variables.contact.twitter }}" target="blank"><i class="retraitespopulaires-icon retraitespopulaires-icon-3x retraitespopulaires-icon-twitter retraitespopulaires-icon-color" aria-hidden="true"></i></a>
            </div>
          </div>

          <div class="button-bubble button-bubble-social inline-block button-bubble-outline text-center">
            <div class="spacer spacer-xs"></div>
            <div class="bubble-icon">
              <a aria-label="Cliquez pour accéder au compte Facebook de Retraites Populaires" href="{{ variables.contact.facebook }}" target="blank"><i class="retraitespopulaires-icon retraitespopulaires-icon-3x retraitespopulaires-icon-facebook retraitespopulaires-icon-color" aria-hidden="true"></i></a>
            </div>
          </div>

          <div class="button-bubble button-bubble-social inline-block button-bubble-outline text-center">
            <div class="spacer spacer-xs"></div>
            <div class="bubble-icon">
              <a aria-label="Cliquez pour accéder au compte YouTube de Retraites Populaires" href="{{ variables.contact.youtube }}" target="blank"><i class="retraitespopulaires-icon retraitespopulaires-icon-3x retraitespopulaires-icon-youtube retraitespopulaires-icon-color" aria-hidden="true"></i></a>
            </div>
          </div>

          <div class="button-bubble button-bubble-social inline-block button-bubble-outline text-center">
            <div class="spacer spacer-xs"></div>
            <div class="bubble-icon">
              <a aria-label="Cliquez pour accéder au compte Instagram de Retraites Populaires" href="{{ variables.contact.instagram }}" target="blank"><i class="retraitespopulaires-icon retraitespopulaires-icon-3x retraitespopulaires-icon-instagram retraitespopulaires-icon-color" aria-hidden="true"></i></a>
            </div>
          </div>

          <div class="button-bubble button-bubble-social inline-block button-bubble-outline text-center">
            <div class="spacer spacer-xs"></div>
            <div class="bubble-icon">
              <a aria-label="Cliquez pour accéder au compte LinkedIn de Retraites Populaires" href="{{ variables.contact.linkedin }}" target="blank"><i class="retraitespopulaires-icon retraitespopulaires-icon-3x retraitespopulaires-icon-linkedin retraitespopulaires-icon-color" aria-hidden="true"></i></a>
            </div>
          </div>
        </div>
      </div>

      <!-- Newsletter -->
      <div class="col-xs-12 col-md-5 col-md-offset-1">
        <div class="spacer spacer-md visible-xs visible-sm"></div>
        <h4>{% trans %}Newsletter{% endtrans %}</h4>
        <p>
          {% set link = path('entity.node.canonical', {'node': 179}) %}
          {% trans %}Recevez <a href="{{ link }}" class="pretty-link text-italic"><i>Savoir-faire</i></a>, le bulletin des spécialistes de Retraites&nbsp;Populaires, trois fois par année via e-mail:{% endtrans %}
        </p>
        {{ load_form('rp_newsletter', 'SubscribeForm') }}
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row">

      <!-- Contacts -->
      <div class="col-xs-12">
        <div class="spacer"></div>
        <h4>{% trans %}Contactez-nous{% endtrans %}</h4>
        <div class="spacer spacer-xs"></div>

        <div class="row">
          <!-- Lausanne -->
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card card-white card-no-shadow card-light">
              <div class="card-body">
                <h4 class="card-title m-t-0">{% trans %}Lausanne{% endtrans %}</h4>
                {% set tel = variables.contact.phone_lausanne|replace({' ': ''}) %}
                <a href="tel:{{ tel }}" class="d-block text-no-wrap">{{ variables.contact.phone_lausanne }}</a>
                <a href="mailto:{{ variables.contact.email }}" class="d-block">{{ variables.contact.email }}</a>
              </div>
            </div>
          </div>

          <!-- Yverdon-les-Bains -->
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card card-white card-no-shadow card-light">
              <div class="card-body">
                <h4 class="card-title m-t-0">{% trans %}Yverdon-les-Bains{% endtrans %}</h4>
                {% set tel = variables.contact.phone_yverdon|replace({' ': ''}) %}
                <a href="tel:{{ tel }}" class="d-block text-no-wrap">{{ variables.contact.phone_yverdon }}</a>
                <a href="mailto:{{ variables.contact.email_yverdon }}" class="d-block">{{ variables.contact.email_yverdon }}</a>
              </div>
            </div>
          </div>

          <!-- Nyon -->
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="card card-white card-no-shadow card-light">
              <div class="card-body">
                <h4 class="card-title m-t-0">{% trans %}Nyon{% endtrans %}</h4>
                {% set tel = variables.contact.phone_nyon|replace({' ': ''}) %}
                <a href="tel:{{ tel }}" class="d-block text-no-wrap">{{ variables.contact.phone_nyon }}</a>
                <a href="mailto:{{ variables.contact.email_nyon }}" class="d-block">{{ variables.contact.email_nyon }}</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>


  <div class="spacer spacer-xs"></div>

  <div class="organic-lines"></div>

  <div class="spacer"></div>

  <div class="container">
    <div class="row">
      <div class="col-xs-12 text-center">
        <ul class="menu-footer unordered-list list-inline list-unstyle-first">
          {% for item in variables.footer_menu %}
          <li>
            {% set target = item.link.options.external ? '_blank' %}
            <a class="pretty-link" href="{{ item.link.urlObject }}" target="{{ target }}">
              {{ item.link.title }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
  <div class="spacer"></div>
</div>
