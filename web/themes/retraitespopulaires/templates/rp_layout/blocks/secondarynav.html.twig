{% if variables.secondary_nav.subtree %}

<div class="spacer spacer-xl visible-xs visible-sm"></div>

<div class="secondary-nav hidden-print">
  <div class="back">
    <a href="{{ variables.secondary_nav.link.urlObject }}" class="retraitespopulaires-icon retraitespopulaires-icon-2x retraitespopulaires-icon-arrow-left"></a>
  </div>
  <div class="secondary-nav-content">
    <div class="title h5 text-secondary">{{ variables.secondary_nav.link.title }}</div>
    <ul class="links list-no-style list-no-padding">
      {% set trail_depth = variables.active_trail|length -1 %}

      {% for item in variables.secondary_nav.subtree %}
      {% set classes = [
        item.inActiveTrail and item.depth == trail_depth  ? 'active',
        item.inActiveTrail and item.depth == trail_depth  ? 'text-bold',
      ] %}
      <li class="{{ classes|join(' ') }}">
        {% set target = item.link.options.external ? '_blank' %}
        <a class="pretty-link" href="{{ item.link.urlObject }}" target="{{ target }}">
          {{ item.link.title }}
        </a>
      </li>

      {% if item.inActiveTrail and item.hasChildren %}
      <li class="no-padding">
        <ul class="links-children list-no-style list-no-padding">
          {% for subitem in item.subtree %}
            {% set classes = [
            'list-twice-padding-left',
            subitem.inActiveTrail and subitem.depth == trail_depth  ? 'active',
            subitem.inActiveTrail and subitem.depth == trail_depth  ? 'text-bold',
          ] %}

          <li class="{{ classes|join(' ') }}">
            {% set target = subitem.link.options.external ? '_blank' %}
            <a class="pretty-link" href="{{ subitem.link.urlObject }}" target="{{ target }}">
              {{ subitem.link.title }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </li>
      {% endif %}
      {% endfor %}
    </ul>
  </div>
  <div class="spacer spacer-md visible-xs visible-sm"></div>
</div>
{% endif %}
