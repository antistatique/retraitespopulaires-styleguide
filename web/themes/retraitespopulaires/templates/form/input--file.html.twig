{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{%
  set btn = [
    'form-file-handler',
    'btn',
    attributes.button_primary.__toString == empty ? '' : 'btn-primary',
    attributes.button_block.__toString == empty ? '' : 'btn-block',
    attributes.theme.__toString == empty ? '' : 'btn-'~attributes.theme.__toString,
  ]
%}

{% if attributes.label is not empty %}
  <div class="label">{{ attributes.label|raw }}</div>
{% endif %}

<div class="{{ btn|join(' ') }}">
  <label>{{ attributes.title|default('Télécharger votre fichier')|raw }}</label> {%- if required or attributes.required -%} * {%- endif -%}
  <input{{ attributes }} />{{ children }}
</div>
