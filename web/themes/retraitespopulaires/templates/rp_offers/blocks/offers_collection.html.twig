{% if variables.offers %}
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      <div class="row flex-row">
        {% for offer in variables.offers %}
        <div class="col-xs-12 col-md-6">
          {{ load_block('rp_offers_offer_teaser_block', {'offer': offer}) }}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>

  {% if variables.pager %}
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      {{ variables.pager }}
    </div>
  </div>
  {% endif %}
</div>
{% endif %}
