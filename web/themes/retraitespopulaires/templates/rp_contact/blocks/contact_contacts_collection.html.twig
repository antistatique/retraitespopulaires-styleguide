{% if variables.contacts %}
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <h2 class="h1 text-center">
      {% trans %}Retraites Populaires peut vous aider ! Voici nos points de contacts.{% endtrans %}
      </h2>
    </div>
  </div>

  <div class="row">
    <div class="col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
      <div class="row flex-row">
        {% for contact in variables.contacts %}
        <div class="col-xs-12">
          {{ load_block('rp_contact_contact_teaser_block', {'contact': contact, 'search_npa': false}) }}
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% endif %}
