    <div class="row">
      <div class="col-xs-12 attachments-contact-heading">
        <div class="h2">{% trans %}Retraites&nbspPopulaires est Ã  votre disposition{% endtrans %}</div>
        <div><a href="{{ path('entity.node.canonical', {'node': 50 }) }}" class="pretty-link pretty-link-berrylight-gray text-{{ variables.theme }}">{% trans %}Contacter Retraites&nbsp;Populaires{% endtrans %}</a></div>
      </div>
    </div>

    <div class="row">
