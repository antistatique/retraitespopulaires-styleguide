{% extends "@retraitespopulaires/node/node.html.twig" %}

{%
  set classes = [
    node.bundle|clean_class,
    view_mode ? view_mode|clean_class,
    'clearfix',
  ]
%}

{% set node_body_classes = [
  'entity-body',
  'body-immobilier'
] %}

{% block node_top %}
  {{ load_block('rp_contact_contact_cta_block', {'theme': 'immobilier'}) }}
{% endblock %}

{% block node_bottom %}
  {% embed "@retraitespopulaires/node/partials/attached_files.html.twig" with {'files': node.field_file_building, 'theme': 'immobilier'} %}{% endembed %}

  {% embed "@retraitespopulaires/node/partials/attached_plans.html.twig" with {'plans': node.field_file_plan, 'theme': 'immobilier'} %}{% endembed %}

  <!-- Visite(s) virtuelle(s) -->
  {% embed "@retraitespopulaires/node/partials/attached_visits.html.twig" with {'visits': node.field_virtual_visit, 'theme': 'immobilier'} %}{% endembed %}

  <!-- Image(s) virtuelle(s) -->
  {% embed "@retraitespopulaires/node/partials/gallery.html.twig" with {title: 'Images virtuelles', 'images': node.field_virtual_image, 'theme': 'immobilier'} %}{% endembed %}
{% endblock %}
