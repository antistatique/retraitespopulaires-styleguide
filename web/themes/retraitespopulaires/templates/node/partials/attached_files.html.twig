<!-- Linked Files -->
{% if files is not empty and files|length > 0 %}
  <div class="spacer spacer-sm"></div>
  <p class="media-heading text-muted">
    {% trans %}
      Fichier attaché
    {% plural files|length %}
      Fichiers attachés
    {% endtrans %}
  </p>
  <ul class="unordered-list">
  {% for file in files %}
      <li>
        {% set file_title = file.description ? file.description : file.entity.filename.value %}
        {% set file_type = file.entity.mimeType ? file.entity.mimeType %}
        <a href="{{ file_url(file.entity.uri.value) }}" target="_blank" class="pretty-link">
          {{ file_title }}
          <span class="text-muted text-small">- {{ file_type|bamboo_file_extension_guesser|upper }}</span>
        </a>
      </li>
  {% endfor %}
  </ul>
{% endif %}
