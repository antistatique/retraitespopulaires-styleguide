{% if variables.products %}
<div class="spacer"></div>

<div class="row">
  <div class="col-xs-12">
    <div class="h1 text-center">
      {% trans %}
          Produit recommandé dans cette situation
      {% plural variables.products %}
          Produit(s) recommandé(s) dans cette situation
      {% endtrans %}
    </div>
    <div class="spacer spacer-md"></div>
  </div>
  <div class="col-md-4">
    {{ load_block('rp_site_products_filter_block') }}
  </div>
  <div class="col-md-8">
    <div class="row">
      {% for product in variables.products %}
        <div class="col-sm-6">
          {{ load_block('rp_site_product_teaser_block', {'product': product}) }}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
