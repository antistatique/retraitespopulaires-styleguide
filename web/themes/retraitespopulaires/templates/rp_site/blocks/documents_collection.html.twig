{% if variables.documents %}
  {% set node_content_width = [
      'col-xs-12 col-lg-10 col-lg-offset-1 col-xl-8 col-xl-offset-2',
  ] %}

  <div class="row">
    <div class="{{ node_content_width|join(' ') }}">
      <h2 class="h1 text-center">
      {% trans %}Retraites Populaires peut vous aider ! Voici la liste des documents utiles.{% endtrans %}
      </h2>
      <div class="spacer spacer-md"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-lg-3 col-lg-offset-2">
      {{ bamboo_render_block('rp_site_documents_filter_block') }}
      <div class="spacer visible-xs visible-sm visible-md"></div>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-md-6 col-md-offset-0">
      {% for document in variables.documents %}
        {{ bamboo_render_block('rp_site_document_teaser_block', {'document': document}) }}
        {% if not loop.last %} <div class="spacer spacer-sm"></div> {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="spacer spacer-md"></div>

  {% if variables.pager %}
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      {{ variables.pager }}
    </div>
  </div>
  {% endif %}
{% endif %}
