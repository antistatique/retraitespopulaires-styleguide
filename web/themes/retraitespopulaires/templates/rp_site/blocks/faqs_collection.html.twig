{% if variables.faqs %}
  {% set node_content_width = [
    'col-xs-12 col-lg-10 col-lg-offset-1 col-xl-8 col-xl-offset-2',
  ] %}

  <div class="row flex-row">
    <div class="{{ node_content_width|join(' ') }}">
      <h2 class="h1 text-center">
      {% trans %}Retraites Populaires peut vous aider ! Voici la liste des questions-r√©ponses.{% endtrans %}
      </h2>
      <div class="spacer spacer-md"></div>
    </div>
  </div>

  <div class="row theme-primary">
    {# col-xs-10 col-xs-offset-1 col-md-3 col-md-offset-1 col-lg-3 col-lg-offset-1 #}
    <div class="col-xs-10 col-xs-offset-1 col-lg-3 col-lg-offset-2">
      {{ bamboo_render_block('rp_site_faqs_filter_block') }}
      <div class="spacer visible-xs visible-sm visible-md"></div>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-md-5 col-md-offset-0">
      {% for faq in variables.faqs %}
        {{ bamboo_render_block('rp_site_faq_teaser_block', {'faq': faq}) }}
        {% if not loop.last %} <div class="spacer spacer-sm"></div> {% endif %}
      {% endfor %}
    </div>
  </div>
  <div class="spacer spacer-md"></div>

  {% if variables.pager %}
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      {{ variables.pager }}
    </div>
  </div>
  {% endif %}
{% endif %}
