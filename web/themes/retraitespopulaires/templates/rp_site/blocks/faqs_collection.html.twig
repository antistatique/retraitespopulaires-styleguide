{% set node_content_width = [
  'col-xs-12 col-lg-10 col-lg-offset-1',
] %}

<div class="row flex-row">
  <div class="{{ node_content_width|join(' ') }}">
    <h2 class="h1 text-center">
    {% trans %}Retraites Populaires peut vous aider ! Voici la liste des questions-réponses.{% endtrans %}
    </h2>
    <div class="spacer spacer-md"></div>
  </div>
</div>

<div class="row theme-primary">
  <div class="col-xs-10  col-sm-offset-1 col-md-offset-0 col-lg-5">
    {{ bamboo_render_block('rp_site_faqs_filter_block') }}
    <div class="spacer visible-xs visible-sm visible-md"></div>
  </div>

  {% if variables.faqs %}
    <div class="col-xs-10 col-sm-offset-1 col-md-12 col-md-offset-0 col-lg-7">
      {% for faq in variables.faqs %}
        {{ bamboo_render_block('rp_site_faq_teaser_block', {'faq': faq}) }}
        {% if not loop.last %} <div class="spacer spacer-sm"></div> {% endif %}
      {% endfor %}
    </div>
  {% else %}
    <div>
      <p>{% trans %}Malheureusement, il n'y a pas de questions-réponses disponible{% endtrans %}</p>
    </div>
  {% endif %}
</div>
<div class="spacer spacer-md"></div>

{% if variables.pager %}
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 text-center">
    {{ variables.pager }}
  </div>
</div>
{% endif %}
