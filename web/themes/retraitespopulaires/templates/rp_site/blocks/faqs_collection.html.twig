{% if variables.faqs %}
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2">
      <div class="h1 text-center">
      {% trans %}Retraites Populaires peut vous aider ! Voici la liste des questions-r√©ponses.{% endtrans %}
      </div>
      <div class="spacer spacer-md"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-md-3 col-md-offset-1 col-lg-3 col-lg-offset-1">
      {{ load_block('rp_site_faqs_filter_block') }}
      <div class="spacer visible-xs visible-sm visible-md"></div>
    </div>
    <div class="col-xs-10 col-xs-offset-1 col-md-6">
      {% for faq in variables.faqs %}
        {{ load_block('rp_site_faq_teaser_block', {'faq': faq, 'theme': variables.theme}) }}
        {% if not loop.last %} <div class="spacer spacer-sm"></div> {% endif %}
      {% endfor %}
    </div>
  </div>

  {% if variables.pager %}
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      {{ variables.pager }}
    </div>
  </div>
  {% endif %}
</div>

{% endif %}
