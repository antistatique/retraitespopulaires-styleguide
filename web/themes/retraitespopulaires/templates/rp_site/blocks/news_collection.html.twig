{% if variables.news %}
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
    {{ bamboo_render_block('rp_site_news_filter_block') }}
  </div>
</div>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
    <div class="row flex-row">
      {% for news in variables.news %}
      <div class="col-xs-12 col-lg-6">
        {{ bamboo_render_block('rp_site_news_teaser_block', {'news': news}) }}
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% if variables.pager %}
<div class="row">
  <div class="col-xs-offset-1 col-xs-10 text-center">
    {{ variables.pager }}
  </div>
</div>
{% endif %}

{% endif %}
