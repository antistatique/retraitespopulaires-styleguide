{% if variables.news %}
<div class="spacer"></div>
<div class="last-news-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 last-news-heading">
        <h2>{{ variables.title }}</h2>
        <div>
          <a href="{{ variables.collection.link }}" class="pretty-link pretty-link-berrylight-gray">{% trans %}Voir toutes les actualit√©s{% endtrans %}</a>
        </div>
      </div>
    </div>

    <div class="row last-news-content same-height-group">
      {% for news in variables.news %}
        {% if loop.index0 % 2 == 0 %}</div><div class="row same-height-group">{% endif %}
        <div class="col-xs-12 col-md-6 same-height">
          {{ load_block('rp_site_news_teaser_block', {'news': news}) }}
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% endif %}
