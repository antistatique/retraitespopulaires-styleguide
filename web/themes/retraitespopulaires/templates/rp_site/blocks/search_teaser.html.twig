{% if variables.result.nid %}
<div class="card card-white card-light card-hover card-no-shadow">
  <div class="card-body">
    <div class="card-justify">
      <h3 class="card-title">
        <a href="{{ path('entity.node.canonical', {'node': variables.result.nid}) }}">{{ variables.result.title }}</a>
      </h3>
      <div class="card-actions">
        <a href="{{ path('entity.node.canonical', {'node': variables.result.nid}) }}" class="btn btn-sm btn-outline btn-primary text-uppercase btn-normal">{% trans %}DÃ©tails{% endtrans %}</a>
      </div>
    </div>
    <hr class="card-separator">
    <p class="text-muted">
      <strong>{{ variables.result.type|upper }}</strong>
    </p>
    <h4 class="title-mini">{% trans %}Extrait{% endtrans %}</h4>
      {% if variables.result.body %}
        <p>{{ variables.result.body|raw }}</p>
      {% elseif variables.result.original_body %}
        {% set body = variables.result.original_body|striptags %}
        <p>... {{ body|slice(0, 120)|raw }} ...</p>
      {% endif %}
  </div>
</div>
{% endif %}
