<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      {{ bamboo_render_block('rp_site_buildings_filter_block') }}
  </div>
</div>
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-12 col-md-offset-0">
      {% if variables.buildings %}
        <div class="row flex-row">
            {% for building in variables.buildings %}
              <div class="col-xs-12 col-lg-6">
                  {{ bamboo_render_block('rp_site_building_teaser_block', {'building': building}) }}
              </div>
            {% endfor %}
        </div>
      {% else %}
        <div>
          <p>{% trans %}Malheureusement, il n'y a pas de construction{% endtrans %}</p>
        </div>
      {% endif %}
  </div>
</div>

{% if variables.pager %}
  <div class="row">
    <div class="col-xs-offset-1 col-xs-10 text-center">
        {{ variables.pager }}
    </div>
  </div>
{% endif %}
