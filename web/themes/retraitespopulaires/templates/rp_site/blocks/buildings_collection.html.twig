{% if variables.buildings %}

<div class="row">
  <div class="col-xs-10 col-xs-offset-1 col-md-3 col-md-offset-1 col-lg-3 col-lg-offset-1">
    {{ load_block('rp_site_buildings_filter_block') }}
  </div>
  <div class="col-xs-10 col-xs-offset-1 col-md-6">
    <div class="row flex-row">
      {% for building in variables.buildings %}
      <div class="col-xs-12">
        {{ load_block('rp_site_building_teaser_block', {'building': building}) }}
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% if variables.pager %}
<div class="row">
  <div class="col-xs-10 col-xs-offset-1 text-center">
    {{ variables.pager }}
  </div>
</div>
{% endif %}

{% endif %}
