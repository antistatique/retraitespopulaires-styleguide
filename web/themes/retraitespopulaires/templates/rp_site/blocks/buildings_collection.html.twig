<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      {{ bamboo_render_block('rp_site_buildings_filter_block') }}
      <div class="spacer spacer-sm"></div>

      {% if variables.buildings %}
        <div class="row flex-row">
          {% for building in variables.buildings %}
          <div class="col-sm-6">
            {{ bamboo_render_block('rp_site_building_teaser_block', {'building': building}) }}
          </div>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>

  {% if variables.pager %}
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 text-center">
      {{ variables.pager }}
    </div>
  </div>
  {% endif %}
</div>
