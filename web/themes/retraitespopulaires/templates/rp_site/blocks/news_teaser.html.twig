{% if variables.news.nid.value %}
<div class="teaser-news shadow shadow-down">
  {% if not variables.news.field_cover.entity.uri.value is empty %}
  <a href="{{ path('entity.node.canonical', {'node': variables.news.nid.value}) }}" class="news-heading">
    <div class="heading-image" style="background-image: url({{ file_url(variables.news.field_cover.entity.uri.value) }})"></div>
    <div class="loader-image">
      <div class="loader">
        <div class="loader-yingyang loader-{{ theme }}"></div>
      </div>
    </div>
  </a>
  {% endif %}
  <div class="news-body">
    <a href="{{ path('entity.node.canonical', {'node': variables.news.nid.value}) }}" class="news-title h1 pretty-link">{{ variables.news.title.value }}</a>
    <div class="spacer spacer-xs"></div>
    <p>{{ variables.news.body.summary }}</p><p>
    </p><div class="spacer spacer-sm"></div>
    <div class="news-extra">
      <span class="news-date">{{ variables.news.field_date.date|date_format('F Y')|capitalize }}</span> <span class="news-type">{{ variables.news.field_news_type.entity.name.value }}</span>
    </div>
  </div>
</div>
{% endif %}
