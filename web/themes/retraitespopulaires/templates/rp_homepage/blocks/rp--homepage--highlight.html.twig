{% set highlight = variables.highlight %}

{% if highlight and highlight.enabled %}
<div class="container">
  <div class="row">
    {% set classes = [
      variables.vimeo_oembed ? 'col-xs-12 col-sm-10 col-sm-offset-1 col-md-offset-0 col-md-8' : 'col-xs-12 col-sm-10 col-sm-offset-1 col-md-offset-0 col-sm-8 col-md-6',
    ] %}
    <div class="{{ classes|join(' ') }}">
      {% set classes = [
        'card card-white card-light card-funky-waves',
        variables.vimeo_oembed ? 'flex-direction-row m-x-0 flex-row',
      ] %}
      <div class="{{ classes|join(' ') }}">
        {% if variables.vimeo_oembed %}
          <div class="col-xs-12 col-md-6 col-lg-8 d-flex p-0">
            {# Magnificent responsive video with padding hack #}
            <div class="vimeo-player" style="background-image: url('{{ variables.vimeo_oembed.thumbnail_url }}');">
              <div class="vimeo-player-container">
                <div id="vimeo-player" data-vimeo-id="{{ variables.vimeo_oembed.video_id }}" data-ratio="{{ variables.vimeo_oembed.height / variables.vimeo_oembed.width }}" data-vimeo-defer style="padding-bottom: {{ variables.vimeo_oembed.height / variables.vimeo_oembed.width * 100 }}%"></div>
              </div>
              <div class="vimeo-player-play">
                <a title="{{ 'Jouer la vidÃ©o'|t }}" href="#">
                  Play
                </a>
              </div>
            </div>
          </div>
          <div class="col-xs-12 col-md-6 col-lg-4 p-0">
            {% block card_body %}
              <div class="card-body">
                <h4 class="card-title m-t-0">
                  <a href="{{ highlight.url }}">{{ highlight.title }}</a>
                </h4>
                <p>{{ highlight.subtitle }}</p>
                <div class="spacer spacer-sm"></div>
                {% if highlight.btn_label %}
                  <a href="{{ highlight.url }}" class="btn btn-primary">{{ highlight.btn_label|default('En savoir plus') }}</a>
                {% endif %}
              </div>
            {% endblock %}
          </div>
        {% else %}
          {{ block('card_body') }}
        {% endif %}
      </div>
    </div>
  </div>
</div>
{% endif %}
