{% set highlight = variables.highlight %}

{% if highlight and highlight.enabled %}
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-0">
      <a href="{{ highlight.url }}" class="card card-white">
        <div class="card-body">
          <h4 class="card-title m-t-0">
            {{ highlight.title }}
          </h4>
          <p>{{ highlight.subtitle }}</p>
          <div class="spacer spacer-sm"></div>
          {% if highlight.btn_label %}
            <span class="btn btn-primary">{{ highlight.btn_label|default('En savoir plus') }}</span>
          {% endif %}
        </div>
      </a>
    </div>
  </div>
</div>
{% endif %}
