<div class="{{ theme_hook_original }}">

  <div class="row">
    <div class="col-md-3">
      <h2>{% trans %}Contactez-nous{% endtrans %}</h2>
      <h3><a href="tel:{{ variables.contact.phone }}">{{ variables.contact.phone }}</a></h3>
      <h3><a href="mailto:{{ variables.contact.email }}">{{ variables.contact.email }}</a></h3>

      <h2>{% trans %}Agences{% endtrans %}</h2>
      <ul class="list-no-style list-no-padding">
        <li>
          Lausanne <a class="pull-right" href="tel:{{ variables.contact.phone_lausanne }}">{{ variables.contact.phone_lausanne }}</a>
        </li>
        <li>
          Yverdon-les-bains <a class="pull-right" href="tel:{{ variables.contact.phone_yverdon }}">{{ variables.contact.phone_yverdon }}</a>
        </li>
        <li>
          Nyon <a class="pull-right" href="tel:{{ variables.contact.phone_nyon }}">{{ variables.contact.phone_nyon }}</a>
        </li>
      </ul>
    </div>

    <div class="col-md-offset-3 col-md-6">
      <h2>{% trans %}Retrouvez-nous sur les r√©seaux sociaux{% endtrans %}</h2>
