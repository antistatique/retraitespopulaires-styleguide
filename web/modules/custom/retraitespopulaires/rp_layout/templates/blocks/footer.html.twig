        <li>
          <a href="{{ variables.contact.twitter }}" target="_blank">
            <i class="fa fa-twitter" aria-hidden="true"></i>
          </a>
        </li>
        <li>
          <a href="{{ variables.contact.facebook }}" target="_blank">
            <i class="fa fa-facebook" aria-hidden="true"></i>
          </a>
        </li>
        <li>
          <a href="{{ variables.contact.linkedin }}" target="_blank">
            <i class="fa fa-linkedin" aria-hidden="true"></i>
          </a>
        </li>
        <li>
          <a href="{{ variables.contact.youtube }}" target="_blank">
            <i class="fa fa-youtube" aria-hidden="true"></i>
